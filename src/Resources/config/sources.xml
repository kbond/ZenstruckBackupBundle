    <services>
        <service id="zenstruck_backup.source.abstract_mysqldump" class="Zenstruck\Backup\Source\MySqlDumpSource" abstract="true" public="false">
            <argument /> <!-- name -->
            <argument /> <!-- database -->
            <argument /> <!-- host -->
            <argument /> <!-- user -->
            <argument /> <!-- password -->
            <argument /> <!-- ssh_host -->
            <argument /> <!-- ssh_user -->
            <argument /> <!-- ssh_port -->
